#!/usr/bin/env bash
# A script that configures the load balancer.
sudo apt -y update
sudo apt -y upgrade
sudo apt -y install haproxy
echo -e 'frontend asmaa.tech\n\tbind *:80\n\tdefault_backend web_servers\n\nbackend web_servers\n\tbalance roundrobin\n\tserver 376576-web-01 18.207.139.124:80 check\n\tserver 376576-web-02 54.236.45.101:80 check\n' >> /etc/haproxy/haproxy.cfg
sudo sed -i "9i ENABLED=1" /etc/default/haproxy
sudo service haproxy restart
